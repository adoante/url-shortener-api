{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",

    // Module / Target
    "module": "nodenext",
    "target": "esnext",
    "moduleResolution": "nodenext",
    "verbatimModuleSyntax": true,
    
    // JSX (React)
    "jsx": "react-jsx",

    // Emit Options
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    // Remove allowImportingTsExtensions if emitting JS
    // "allowImportingTsExtensions": true,

    // Type-Checking
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true
  },
  "include": ["src"]
}
